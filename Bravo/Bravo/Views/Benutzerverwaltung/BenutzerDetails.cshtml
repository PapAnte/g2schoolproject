
@{
        ViewBag.Title = "BenutzerDetails";
        Layout = "~/Views/Shared/_Layout.cshtml";

        string anrede, titel, name, geburtsdatum, benutzername, email, rechtegruppe, erstelldatum;


        anrede = "Herr";
        titel = "";
        name = "Max Mustermann";
        geburtsdatum = DateTime.Today.ToShortDateString();
        benutzername = "mmustermann";
        email = "max.mustermann@mustermail.com";
        rechtegruppe = "Admin";
        erstelldatum = DateTime.Today.ToShortDateString();


}

<div class="navbar_side_child navbar-inverse navbar-fixed-side-child">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Übersicht Benutzer", "Index", "Benutzerverwaltung")</li>
            <li>@Html.ActionLink("Benutzer hinzufügen", "BenutzerHinzufuegen", "Benutzerverwaltung")</li>
        </ul>
    </div>
</div>


<h3>Benutzer bearbeiten</h3>



<table style="width:100%;">
    <tr><td>Anrede</td><td><input id="anrede" type="text" value="@anrede" /></td></tr>
    <tr><td>Titel</td><td><input id="titel" type="text" value="" /></td></tr>
    <tr><td>Name</td><td><input id="name" type="text" value="@name" /></td></tr>
    <tr><td>Geburtsdatum</td><td><input id="geburtsdatum" type="text" value="@geburtsdatum" /></td></tr>
    <tr><td>Benutzername</td><td><input id="benutzername" type="text" value="@benutzername" /></td></tr>
    <tr><td>E-Mail</td><td><input id="email" type="text" value="@email" /></td></tr>
    <tr><td>Rechtegruppe</td><td><input id="rechtegruppe" type="text" value="@rechtegruppe" /></td></tr>
    <tr><td>Erstellt am</td><td><input id="erstelldatum" type="text" value="@erstelldatum" /></td></tr>
</table>

<br />

<input id="aendern" type="submit" value="Ändern" onclick="btnAendern_Click" class="btn btn-primary"/>
<input id="loeschen" type="submit" value="Löschen" onclick="btnLoeschen_Click" class="btn btn-primary"/>
<input id="zurueck" type="submit" value="Zurück" onclick="btnZurueck_Click" class="btn btn-primary"/>