
@{
    ViewBag.Title = "SoftwareHinzufuegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar_side_child navbar-inverse navbar-fixed-side-child">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Übersicht Software", "Index", "Softwareverwaltung")</li>
            <li>@Html.ActionLink("Software hinzufügen", "SoftwareHinzufuegen", "Softwareverwaltung")</li>
        </ul>
    </div>
</div>

<h3>Software hinzufügen</h3>

<div id="addsupplier">
    <table>
        <tr><td>Bezeichnung</td><td><input id="bezeichnung" type="text" /></td></tr>
        <tr><td>Version</td><td><input id="version" type="text" /></td></tr>
        <tr><td>Lizenzumfang</td><td><input id="lizenzumfang" type="text" /></td></tr>
        <tr><td>Lizenzschlüssel</td><td><input id="ort" type="text" /></td></tr>
        <tr><td>Hersteller</td><td><input id="hersteller_id" type="tel" /></td></tr>
        <tr><td>Lieferant</td><td><input id="lieferant_id" type="tel" /></td></tr>
        <tr><td>Einkaufsdatum</td><td><input id="einkaufsdatum" type="date" /></td></tr>
        <tr><td>Einkaufsbeleg</td><td><input id="einkaufsbeleg" type="file" /></td></tr>
        <tr><td>Raum</td><td><input id="raum_id" type="text" /></td></tr>
        <tr><td>Notiz</td><td><input id="notiz" type="text" height="2" /></td></tr>
    </table>


    <br /><br /><br />
    <input id="zurücksetzen" type="reset" value="Zurücksetzen" class="btn btn-primary" />
    <input id="erstellen" type="submit" value="Erstellen" class="btn btn-primary" />
    <br /><br />
    <input id="zurueck" type="submit" value="Zurück" class="btn btn-primary" />
</div>